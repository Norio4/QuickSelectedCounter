{
    "manifest_version": 3,
    "name": "QuickSelectedtextCounter",
    "version": "1.0.0",
    "author": "Norio4 Yahata",
    "description": "Simple & Quick Selected Text Counter",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Q",
                "mac": "MacCtrl+Shift+T"
            },
            "description": "Quick Text Count"
        }
    }
}
